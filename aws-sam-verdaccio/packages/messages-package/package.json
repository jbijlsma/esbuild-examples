{
  "name": "@dnw/messages-package",
  "version": "0.0.5",
  "description": "Messages package",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "directories": {
    "lib": "lib"
  },
  "license": "ISC",
  "scripts": {
    "prebuild": "rm -rf ./dist",
    "build": "./scripts/build.js",
    "postbuild": "npm run copy-package-json && npm run copy-resources && npm run build-types",
    "build-types": "tsc --emitDeclarationOnly --declaration",
    "copy-package-json": "cp ./package.json ./dist",
    "copy-resources": "cp ./resources/* ./dist"
  },
  "dependencies": {
    "csv": "^6.2.0"
  },
  "devDependencies": {
    "esbuild": "^0.15.10",
    "@types/node": "^18.8.0"
  }
}
